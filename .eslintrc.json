{
  "env": {
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "rules": {
    "space-before-function-paren": "off",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-useless-constructor": "off"
  },
  "root": true
}